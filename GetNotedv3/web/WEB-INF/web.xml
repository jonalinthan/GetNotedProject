<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>servlets.RegisterServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>servlets.LoginServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GenerateSchoolAndMajorServlet</servlet-name>
        <servlet-class>servlets.GenerateSchoolAndMajorServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>GetBuddiesServlet</servlet-name>
        <servlet-class>servlets.GetBuddiesServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>StudentSettingsServlet</servlet-name>
        <servlet-class>servlets.StudentSettingsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ProfessorSettingsServlet</servlet-name>
        <servlet-class>servlets.ProfessorSettingsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>SearchServlet</servlet-name>
        <servlet-class>servlets.SearchServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/RegisterServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GenerateSchoolAndMajorServlet</servlet-name>
        <url-pattern>/GenerateSchoolAndMajorServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>GetBuddiesServlet</servlet-name>
        <url-pattern>/GetBuddiesServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>StudentSettingsServlet</servlet-name>
        <url-pattern>/StudentSettingsServlet</url-pattern>
        </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ProfessorSettingsServlet</servlet-name>
        <url-pattern>/ProfessorSettingsServlet</url-pattern>
        </servlet-mapping>
    <servlet-mapping>
        <servlet-name>SearchServlet</servlet-name>
        <url-pattern>/SearchServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
